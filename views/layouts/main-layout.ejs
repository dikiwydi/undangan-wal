    <script>

    window.addEventListener('load', function() {
        var main = document.querySelector('main');
        main.classList.add('loaded');
        });
      // Mendapatkan elemen-elemen waktu pada halaman
var hariElement = document.getElementById("hari");
var jamElement = document.getElementById("jam");
var menitElement = document.getElementById("menit");
var detikElement = document.getElementById("detik");

// Mendapatkan waktu target dari atribut data-waktu
var targetWaktu = new Date("2023-06-20T10:00:00").getTime(); // Ubah tanggal dan jam sesuai keinginan

// Mengupdate waktu setiap detik
setInterval(function() {
    // Mendapatkan waktu saat ini
    var sekarang = new Date().getTime();

    // Menghitung selisih waktu antara sekarang dengan waktu target
    var selisih = targetWaktu - sekarang;

    // Menghitung jumlah hari, jam, menit, dan detik
    var hari = Math.floor(selisih / (1000 * 60 * 60 * 24));
    var jam = Math.floor((selisih % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var menit = Math.floor((selisih % (1000 * 60 * 60)) / (1000 * 60));
    var detik = Math.floor((selisih % (1000 * 60)) / 1000);

    // Menampilkan waktu pada elemen-elemen di halaman
    hariElement.innerHTML = hari;
    jamElement.innerHTML = jam;
    menitElement.innerHTML = menit;
    detikElement.innerHTML = detik;

}, 1000); // Mengupdate waktu setiap 1 detik

    </script>
